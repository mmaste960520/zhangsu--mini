page {
  background: #fff;
}

.header {
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
  color: #333;
  font-size: 28rpx;
  z-index: 1000;
  overflow: hidden;
  white-space: nowrap;
  background: #fff;
}

.header scroll-view {
  height: 100%;
}

.cs {
  display: inline-block;
  padding: 0 15rpx;
  text-align: center;
  min-width: 20%;
  height: 87rpx;
  line-height: 87rpx;
  box-sizing: border-box;
}

.cs text {
  height: 100%;
}
.cs .iconfont.active{
transform: rotate(180deg);
}

.active text {
  color: #ce4e63;
}

/* 列表 */

.category-list {
  padding: 35rpx 40rpx;
  margin-top: 100rpx;
}
.category-list .category-item{
  margin-bottom: 20rpx;
}

.category-list .picture {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin-right: 30rpx;
}

.category-list .picture image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.category-list .text-r {
  width: 540rpx;
  margin-top: 8rpx;
}

.category-list .text-r .title {
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
} 
.category-list .text-r .title image{
  width: 35rpx;
  height: 35rpx;
}
.category-list .text-r .title .vip-img{
  width: 55rpx;
  margin-left: 10rpx;
}

.category-list .text-r .sub {
  font-size: 24rpx;
  color: #999;
}

.category-list .text-r .text-r-bottom {
  background: #fef5f5;
  padding: 20rpx 25rpx;
  border: 2rpx solid #f8e6e6;
  margin-top: 25rpx;
  position: relative;
}

.category-list .text-r .text-r-bottom .item-l .item-l-title {
  color: #d25669;
}

.category-list .text-r .text-r-bottom .item-l .item-l-date {
  color: #999;
  font-size: 22rpx;
}
.category-list .text-r .text-r-bottom .item-l .item-l-title .line-price{
  text-decoration:line-through;color:#666;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.category-list .text-r .text-r-bottom .item-btn {
  background: #ce4e63;
  color: #fff;
  padding: 8rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.circle1 {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top: 40%;
  left: -15rpx;
  border-top: 2rpx solid #f8e6e6;
  transform: rotate(90deg);
}

.circle2 {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top: 40%;
  right: -15rpx;
  border-top: 2rpx solid #f8e6e6;
  transform: rotate(-90deg);
}
/* 弹窗 */
.popup{
  position: fixed;
  top: 88rpx;
  width: 100%;
  z-index: 1000;
}
.popup .popup-list{
  margin-bottom: 40rpx;
}
.popup .item{
  padding: 0 40rpx;
}
.popup .item .title{
  font-size: 24rpx;
  color:#666;
  margin: 20rpx 0;
}
.popup .item .item-list .item-list-content{
  background:#F8F6F7;
  padding: 8rpx 40rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.popup .item-btn view{
width: 50%;
border: 2rpx solid #eee;
text-align: center;
padding: 25rpx 0;
}
.popup .item-btn .complete{
  border-left: 0;
  color:#CE4E63;
}
