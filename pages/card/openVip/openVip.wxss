/* pages/card/index.wxss */
.vip_crad {
  width: auto;
  min-height: 300rpx;
  background: #fff;
  padding: 30rpx 40rpx 40rpx 40rpx;
  position: relative;
}
.vip_crad image {
  width: 100%;
}
.vip_crad .opening {
  position: absolute;
  width: 100%;
  text-align: center;
  left: 0;
  top: 190rpx;
  color: #000;
  font-weight: 500;
}
.vip_crad .opening button {
  width: 260rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  background: #CE4E63;
  color: #fff;
  border-radius: 40rpx;
  margin: 70rpx auto 0 auto;
}

.userInfo {
  width: auto;
  background: #fff;
  padding: 0 40rpx;
  color: #333333;
  font-weight: 550;
}
.userInfo .userPortrait {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px #D8D8D8 solid;
  margin-right: 20rpx;
}
.userInfo view text {
  color: #666666;
  font-size: 24rpx;
  font-weight: 490;
}

.vipPrice {
  width: 360rpx;
  text-align: center;
  border: 1px #CE4E63 solid;
  border-radius: 6rpx;
  color: #CE4E63;
  padding: 30rpx;
  margin: 30rpx auto auto auto;
}
.vipPrice text {
  font-size: 34rpx;
  font-weight: 650;
}

.useRule {
  width: auto;
  min-height: 100rpx;
  background: #fff;
  padding: 0 30rpx 30rpx 30rpx;
  margin-top: 20rpx;
}
.useRule .title {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px #666666 dashed;
  margin-bottom: 30rpx;
}
.useRule .rule text {
  display: block;
  font-size: 24rpx;
  color: #333333;
}

.goOpen {
  width: auto;
  height: 85rpx;
  line-height: 85rpx;
  background: #EEAE4B;
  color: #6E4505;
  font-size: 30rpx;
  border-radius: 8rpx;
  font-weight: 520;
  margin-top: 60rpx;
}

