/* pages/card/index.wxss */
.vip_crad {
  width: auto;
  height: 300rpx;
  background: #fff;
  padding: 30rpx 40rpx 40rpx 40rpx;
  position: relative;
  margin-bottom: 135rpx;
}
.vip_crad image {
  width: 100%;
}
.vip_crad .opening {
  position: absolute;
  width: 100%;
  text-align: center;
  left: 0;
  top: 190rpx;
  color: #000;
  font-weight: 500;
}
.vip_crad .opening button {
  width: 260rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
  background: #CE4E63;
  color: #fff;
  border-radius: 40rpx;
  margin: 70rpx auto 0 auto;
}

.class_nav {
  width: 600rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx 0 0 8rpx;
  margin: 30rpx 0 30rpx 30rpx;
  position: relative;
  display: -webkit-box;
  overflow-x: scroll;
  overflow-y: hidden;
}
.class_nav view {
  padding: 0rpx 30rpx;
  font-size: 24rpx;
  color: #333333;
  height: 80rpx;
  line-height: 80rpx;
}
.class_nav .on {
  color: #CE4E63;
}
.search_but {
  width: 90rpx;
  height: 80rpx;
  display: block;
  z-index: 10;
}

.goods_list {
  width: auto;
  margin: 0 30rpx 30rpx 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}
.goods_list .acea-row {
  margin-bottom: 40rpx;
}
.goods_list .acea-row:last-child {
  margin-bottom: 0rpx;
}
.goods_img {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 8rpx;
}
.goodsName {
  width: 420rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #333333;
  position: relative;
}
.goodsName .title {
  width: auto;
  padding-right: 90rpx;
  position: relative;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goodsName .title text {
  position: absolute;
  right: 0;
  color: #999;
  font-size: 22rpx;
}
.goodsName .goodsInfo {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goodsName .endTime {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goodsName .price {
  font-size: 32rpx;
  color: #CE4E63;
  margin-top: 30rpx;
  font-weight: 600;
}
.rmb {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
  font-weight: 500;
}
.freeBut {
  position: absolute;
  right: 0;
  bottom: -5rpx;
  color: #fff;
  background: #CE4E63;
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 25rpx;
  border-radius: 30rpx;
}

.userInfo {
  width: auto;
  background: #fff;
  padding: 0 40rpx;
  color: #333333;
  font-weight: 550;
}
.userInfo .userPortrait {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px #D8D8D8 solid;
  margin-right: 20rpx;
}
.userInfo view text {
  color: #666666;
  font-size: 24rpx;
  font-weight: 490;
}
