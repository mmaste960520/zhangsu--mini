/* 搜索 */
page{background:#fff;}
.search {
  padding: 20rpx 30rpx;
  position: fixed;
  background: #fff;
  z-index:999;
}

.search .bnt {
  width: 90rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 24rpx;
  color: #666;
}

.search .bnt .drop {
  width: 17rpx;
  height: 10rpx;
  margin-bottom: 2rpx;
}

.search .input {
  width: 580rpx;
  background-color: #efeff4;
  border-radius: 33rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  height: 66rpx;
}

.search .input input {
  width: 390rpx;
  font-size: 24rpx;
}

.search .input .placeholder {
  color: #bbb;
}

.search .input image {
  width: 30rpx;
  height: 30rpx;
}

.search .input .acea-row image {
  margin-right: 20rpx;
}

/* 城市主体 */

.city-list {
  padding-top:100rpx; 
  height: 100%;
  display: flex;
  background: #fff;
}

/* 右边检索字母 */

.city-left {
  flex: 1;
}

.city-right {
  width: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: fixed;
  right: 0;
  top: 235rpx;
  margin-right: 15rpx;
}

.letter-item {
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  height: 30rpx;
}

.letter-item:first-child {
  height: 130rpx;
}

/* 左边主体 */

.city-box {
  height: 100%;
  background: #fff;
  display: flex;
}

.city-locate-title {
  margin: 0rpx 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}

.nearby-city-title, .new-city-title {
  color: #333;
  margin: 30rpx 30rpx;
}

.city-list-box .new-city-title {
  border-top: 2rpx solid #eee;
  padding-top: 30rpx;
}

.new-city-box {
  display: flex;
  flex-wrap: wrap;
}

.new-city-text {
  width: 200rpx;
  text-align: center;
  line-height: 65rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  margin: 0 0 10rpx 30rpx;
}

.new-city-text image {
  width: 45rpx;
  height: 45rpx;
}

.city-first-letter {
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
  background: #f8f6f7;
  color: #999;
}

.city-name {
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx;
}
