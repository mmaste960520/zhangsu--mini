/* 券列表两排 */
.couponList{padding: 0 30rpx;margin-bottom: 40rpx;}
.couponList .item{position:relative;width: 340rpx;height:540rpx;box-sizing: border-box;float:left;margin-bottom:20rpx;border-radius: 15rpx;}
.couponList .item:nth-child(odd){margin-right: 10rpx}
.couponList .item .top{margin: 10rpx 20rpx 0 20rpx;height: 80rpx;}
.couponList .item .top .top-r-price .text{font-weight: bold;}
.couponList .item .top .top-l{background:#CE4E63;font-size: 22rpx;color:#fff;padding:8rpx 15rpx;border-radius: 30rpx;}
.couponList .item .line{width: 100%;height: 31rpx;}
.couponList .item .line image{width: 100%;height: 100%;}
.couponList .item .pictrue{position:relative;text-align: center;padding: 0 40rpx}
.couponList .item .pictrue image{width:220rpx;height:220rpx;border-radius:15rpx;}
.couponList .item .underline{padding:20rpx 20rpx 10rpx 20rpx;border-radius: 0 0 6rpx 6rpx;}
.couponList .item .underline .text{font-size:26rpx;}
.couponList .item .underline .text .twolist-hidden{margin-bottom: 10rpx;}
.couponList .item .underline .text .money{font-size:22rpx;}
.couponList .item .underline .text .money .num{text-decoration:line-through;color:#666;}
.couponList .item .underline .text .vip view:first-child{color:#5C4602;margin-left:5rpx;}
.couponList .item .underline .text .vip view:last-child{color:#fff;margin-right:10rpx;}
.couponList .item .store{padding:0 20rpx 0 20rpx;color:#666; }